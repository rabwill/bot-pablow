{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.8/MicrosoftTeams.schema.json",
    "manifestVersion": "1.8",
    "version": "0.0.1",
    "id": "04517b84-5571-4e4f-a0a2-7e7d687e321b",
    "packageName": "com.onmicrosoft.bgtest18.pablow",
    "developer": {
        "name": "Microsoft Developer Relations",
        "websiteUrl": "https://docs.microsoft.com/en-us/teamblog/awesome-jobs",
        "privacyUrl": "https://privacy.microsoft.com/en-US/",
        "termsOfUseUrl": "https://www.microsoft.com/en-us/servicesagreement"
    },
    "icons": {
        "color": "color.png",
        "outline": "outline.png"
    },
    "name": {
        "short": "Pablow",
        "full": "Personal Assistant Bot LOW code"
    },
    "description": {
        "short": "Personal Assistant Bot",
        "full": "Bot to check what's next, what's happening, and to remind you of things"
    },
    "accentColor": "#9BF00B",
    "staticTabs": [
        {
            "entityId": "conversations",
            "scopes": [
                "personal"
            ]
        },
        {
            "entityId": "about",
            "scopes": [
                "personal"
            ]
        }
    ],
    "bots": [
        {
            "botId": "<BOT_ID>",
            "scopes": [
                "personal"
            ],
            "commandLists": [
                {
                    "scopes": [
                        "personal"
                    ],
                    "commands": [
                        {
                            "title": "Remind me",
                            "description": "Ask Pablo to remind you of something using Microsoft ToDo"
                        },
                        {
                            "title": "What's Next",
                            "description": "Find out what's next on your calendar and todo list"
                        },
                        {
                            "title": "What's up?",
                            "description": "Find out what's trending in Microsoft 365"
                        },
                        {
                            "title": "Help",
                            "description": "Get more detailed help"
                        }
                    ]
                }
            ],
            "supportsFiles": false,
            "isNotificationOnly": false
        }
    ],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": [
        "token.botframework.com"
    ]
}